if { ${os.major} >= "9" } {
# only to indicate that system libs are used
default_variants +system_libs
variant system_libs {
fetch {}
extract {}
patch {}
checksum {}
use_configure       no
build {}
destroot {
    xinstall -d ${destroot}${prefix}/share/doc/${name}
    system "echo dummy port > ${destroot}${prefix}/share/doc/${name}/README.txt"
}
archive {}
}
}
# end os.major >= 9